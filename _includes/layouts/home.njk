---
layout: layouts/base.njk
eleventyNavigation:
  key: Home
  order: 1
---

<h1>{{ metadata.title }}</h1>
<p>{{ metadata.description }}</p>

<h2>Latest 3 Posts</h2>
<ul class="postlist" role="list">
  {% for post in collections.posts | reverse | slice(0, 3) %}
    <li class="postlist-item">
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      <span class="postlist-date">{{ post.date | readableDate }}</span>
    </li>
  {% endfor %}
</ul>

{% if collections.post | length > 3 %}
  <p><a href="{{ '/archive/' | url }}">{{ collections.post | length - 3 }} more post(s) can be found in the archive.</a></p>
{% endif %}
