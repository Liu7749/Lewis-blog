---
layout: layouts/base.njk
eleventyNavigation:
  key: Home
  order: 1
---

<h1>{{ metadata.title }}</h1>
<p>{{ metadata.description }}</p>

<h2>Latest 3 Posts</h2>
<ul class="postlist" role="list">
  {# Render the newest 3 posts by iterating and conditionally showing only the first 3 #}
  {% for post in collections.post | reverse %}
    {% if loop.index0 < 3 %}
      <li class="postlist-item">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        <span class="postlist-date">{{ post.date | readableDate }}</span>
      </li>
    {% endif %}
  {% endfor %}
</ul>

{% if collections.post | length > 3 %}
  <p><a href="{{ '/blog/' | url | normalizeUrl }}">{{ collections.post | length - 3 }} more post(s) can be found in the archive.</a></p>
{% endif %}
